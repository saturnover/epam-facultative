<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
			  http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
 <display-name>Archetype Created Web Application</display-name>

	<filter>
		<filter-name>Encoding Filter</filter-name>
		<filter-class>com.sydorchenko.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>Encoding Filter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>/controller</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>Access Filter</filter-name>
		<filter-class>com.sydorchenko.filter.AccessFilter</filter-class>

		<init-param>
			<param-name>guest-jsp</param-name>
			<param-value>
				/index.jsp
				/contact.jsp
				/error.jsp
				/changelocale.jsp
								/register.jsp
			</param-value>
		</init-param>

		<init-param>
			<param-name>guest-commands</param-name>
			<param-value>
				login
				courseinfo
				getallcourses
																																register
				writeadmin
			</param-value>
		</init-param>

		<init-param>
			<param-name>student-jsp</param-name>
			<param-value>
				/index.jsp
				/contact.jsp
				/error.jsp
				/changelocale.jsp
			</param-value>
		</init-param>

		<init-param>
			<param-name>student-commands</param-name>
			<param-value>
				logout
				courseinfo
				edituseropen
				editusersave
				getallcourses
				myprofile
				subscribe
				writeadmin
			</param-value>
		</init-param>

		<init-param>
			<param-name>teacher-jsp</param-name>
			<param-value>
				/contact.jsp
				/error.jsp
				/index.jsp
				/changelocale.jsp
				/marksheet.jsp
			</param-value>
		</init-param>

		<init-param>
			<param-name>teacher-commands</param-name>
			<param-value>
				logout
				courseinfo
				edituseropen
				editusersave
				getallcourses
				markopen
				marksave
				myprofile
				writeadmin
			</param-value>
		</init-param>

		<init-param>
			<param-name>admin-jsp</param-name>
			<param-value>
				/contact.jsp
				/error.jsp
				/index.jsp
				/changelocale.jsp
				/register.jsp
			</param-value>
		</init-param>

		<init-param>
			<param-name>admin-commands</param-name>
			<param-value>
				logout
				courseinfo
				createcourseopen
				createcoursesave
				editcourseopen
				editcoursesave
				edituseropen
				editusersave
				getallcourses
				getallusers
				myprofile
				register
				removecourse
				writeadmin
			</param-value>
		</init-param>

	</filter>
	
	<filter-mapping>
		<filter-name>Access Filter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>/controller</url-pattern>
	</filter-mapping>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>en</param-value>
	</context-param>

	<context-param>
		<param-name>locales</param-name>
		<param-value>/WEB-INF/locales.properties</param-value>
	</context-param>


</web-app>
